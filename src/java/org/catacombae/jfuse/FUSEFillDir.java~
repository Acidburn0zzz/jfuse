package org.catacombae.jfuse;

public interface FUSEFillDir {
    /** Function to add an entry in a readdir() operation
     *
     * @param voidp_buf the buffer passed to the readdir() operation
     * @param const_charp_name the file name of the directory entry
     * @param const_struct_statp_stbuf file attributes, can be NULL
     * @param off_t_off offset of the next entry or zero
     * @return 1 if buffer is full, zero otherwise
     */
    public long fill(byte[] voidp_buf,
		     byte[] const_charp_name,
		     byte[] const_struct_statp_stbuf,
		     long off_t_off);
}

